@model ModelClasses.ViewModels.LoginViewModel

<div class="d-flex flex-column min-vh-100 background-image">
    <div class="flex-grow-1">
        <div class="row p-4 rounded-3 shadow-lg mx-auto login-card">
            <div class="col-12">
                <h2 class="text-center text-uppercase text-success mb-4">Login to Your Account</h2>
                <hr/>
            </div>

            <div class="col-12">
                <h6 class="text-center text-muted mb-3">Login Using Social Networks</h6>
                <div class="row d-flex justify-content-center align-items-center mb-4">
                    <div class="col-4 text-center">
                        <a href="#" style="text-decoration: none;">
                            <i class="bi bi-facebook fa-lg text-primary"></i>
                        </a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="#" style="text-decoration: none;">
                            <i class="bi bi-google fa-lg" style="color: #DB4437;"></i>
                        </a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="#" style="text-decoration: none;">
                            <i class="bi bi-linkedin fa-lg text-info"></i>
                        </a>
                    </div>
                </div>
            </div>

            <form asp-action="Login" method="post" asp-controller="Account" class="col-12">
                <div class="mb-3">
                    <input placeholder="Email" asp-for="Email" class="rounded form-control text-secondary border-1 border-secondary" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <input placeholder="Password" asp-for="Password" type="password" class="rounded form-control text-secondary border-1 border-secondary" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success btn-lg" type="submit">Submit</button>
                </div>
            </form>

            <div class="col-12 mt-4">
                <h6 class="text-info">If you are a new user, click below to register</h6>
                <div class="d-flex justify-content-center">
                    <a asp-action="Register" class="btn btn-info btn-lg">
                        <strong>Register</strong>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}